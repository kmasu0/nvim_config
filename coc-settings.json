{
  "languageserver": {
    "ccls": {
      "command": "/opt/ccls/bin/ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp",
        "h",
        "hpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/home/k-masuda/.cache/ccls-cache"
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [ "build/" ],
      "initializationOptions": {"buildDirectory": "build"}
    }
  },
  "python.jediEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "objc",
    "objcpp",
    "h",
    "hpp",
    "css",
    "python",
    "markdown",
    "cmake",
    "json"
  ]
}
